#!/usr/bin/make -f

export DH_VERBOSE=1
export PYBUILD_NAME=kaldiasr

%:
	dh $@ --with python2,python3 --buildsystem=pybuild


override_dh_installexamples:
	dh_installexamples
	dh_installexamples -ppython-kaldiasr-doc data/*.wav examples/*.py


